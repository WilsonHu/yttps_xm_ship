    <LinearLayout
        android:id="@+id/loading_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@color/white">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="96dp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="36dp"
            android:src="@drawable/dream_logo"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="30dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/loading_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/loading"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/loading_en"
                android:text="Please wait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/loading_tc"
                android:text="請耐心等待"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/dimgray"
                android:layout_marginTop="5dp"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/loading_sc"
                android:text="请耐心等待"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/dimgray"
                android:layout_marginTop="5dp"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/loading_ja"
                android:text="お待ちください"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/dimgray"
                android:layout_marginTop="5dp"
                android:textSize="24sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/verify_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:visibility="invisible"
        android:orientation="vertical"
        android:background="@color/white">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="96dp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="36dp"
            android:src="@drawable/dream_logo"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="30dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/verify_result_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/verify_success"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/verify_result_en"
                android:text="Welcome Chan!"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/verify_result_tc"
                android:text="歡迎！"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/dimgray"
                android:layout_marginTop="5dp"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/verify_result_sc"
                android:text="欢迎！"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/dimgray"
                android:layout_marginTop="5dp"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/verify_result_ja"
                android:text="ようこそ！"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/dimgray"
                android:layout_marginTop="5dp"
                android:textSize="24sp"/>
        </LinearLayout>
    </LinearLayout>
